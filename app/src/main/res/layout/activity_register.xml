<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="15"
    tools:context="com.example.kbasa.teaching.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:layout_margin="7dp"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:id="@+id/tv_first_name"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="First Name"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/input_first_name"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="7dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Last Name"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/input_last_name"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="7dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="7dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Password"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="7dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:id="@+id/tv_interests"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Interests"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/input_interests"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="comma seperated keywords" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="7dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="7dp">

        <ToggleButton
            android:id="@+id/btn_students"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="checkStudent"
            android:textOff="Register as student"
            android:textOn="Registering as student" />

        <ToggleButton
            android:id="@+id/btn_teachers"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:onClick="checkTeacher"
            android:layout_weight="1"
            android:textOff="Register as teachers"
            android:textOn="Registering as teachers" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_weight="2"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:onClick="register"
        android:layout_marginHorizontal="20dp"
        android:text="Sign up"
        android:textSize="20dp" />

</LinearLayout>
